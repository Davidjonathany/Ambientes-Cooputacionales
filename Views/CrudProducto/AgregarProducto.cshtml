@model ProyectoFinalVentasMVC.Models.Producto

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Agregar Producto</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Style.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2>Agregar Producto</h2>
        <br /><br />

        <form asp-action="AgregarProducto" asp-method="post">
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="CodigoBarras" class="control-label"></label>
                <input asp-for="CodigoBarras" class="form-control" />
                <span asp-validation-for="CodigoBarras" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label class="control-label">IVA:</label><br>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Iva" value="true" id="ivaSi">
                    <label class="form-check-label" for="ivaSi">Sí</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Iva" value="false" id="ivaNo">
                    <label class="form-check-label" for="ivaNo">No</label>
                </div>
                <span asp-validation-for="Iva" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="IdTipo" class="control-label">Tipo de Producto</label>
                <select asp-for="IdTipo" class="form-control" asp-items="@(new SelectList(ViewBag.TiposProductos, "TipoId", "Tipo"))">
                    <option value="">Seleccione un tipo de producto</option>
                </select>
                <span asp-validation-for="IdTipo" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <br /> <br />
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Agregar</button>
                <a asp-action="ListarProductos" class="btn btn-danger">Cancelar</a>
            </div>
        </form>
    </div>
</body>
</html>
