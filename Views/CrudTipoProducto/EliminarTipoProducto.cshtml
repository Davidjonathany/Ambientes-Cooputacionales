@model ProyectoFinalVentasMVC.Models.TipoProducto

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar Tipo de Producto</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Style.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2>Eliminar Tipo de Producto</h2>
        <hr />
        <div class="alert alert-warning" role="alert">
            <strong>¡Advertencia!</strong> ¿Está seguro que desea eliminar este Tipo de Producto?
            <br />Una vez presione el botón <strong>¡Eliminar!</strong> se borrará definitivamente
            <br />Y no se podrá recuperar la información de este Tipo de Producto.
        </div>
        <br />
        <dl class="row">
            <dt class="col-sm-2">
                Tipo de producto
            </dt>
            <dd class="col-sm-10">
                @Model.Tipo
            </dd>
        </dl>
        <br />
        <form asp-action="ConfirmDelete" asp-route-id="@Model.TipoId" method="post">
            <button type="submit" class="btn btn-danger">Sí, eliminar</button>║
            <a asp-action="ListarTipoProducto" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</body>
</html>
