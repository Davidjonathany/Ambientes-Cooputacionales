@model ProyectoFinalVentasMVC.ViewsModels.Login

@{
    Layout = null; // Deshabilita el diseño predeterminado para esta vista
}

<!DOCTYPE html>
<html lang="es" xml:lang="es">

<head>
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/FontsLogin/css/style.css" />
    <link rel="icon" type="image/x-icon" href="/login.ico" />
</head>

<body>

    <div class="login-container">
        <!-- Carrusel -->
        <div class="carousel-container">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/FontsLogin/images/datos-de-facturacion.png"
                             class="d-block w-100" alt="Carousel Image">
                    </div>
                    <div class="carousel-item">
                        <img src="/FontsLogin/images/Facturacion-automatica.png"
                             class="d-block w-100" alt="Carousel Image">
                    </div>
                    <div class="carousel-item">
                        <img src="/FontsLogin/images/facturacion-electronica.BoJzj_d3.jpg"
                             class="d-block w-100" alt="Carousel Image">
                    </div>
                </div>
            </div>
        </div>


        <div class="login-form-container">

            <div class="login-image">
                <img src="/FontsLogin/images/login.png" alt="Login Image">
            </div>

            <div class="card">
                <center>
                <div class="card-header">
                    Inicio Sesion
                    </div>
                </center>
                <div class="card-body">
                    <form asp-controller="Acceso" asp-action="Login" method="post">
                        <!-- Campo de entrada de correo -->
                        <div class="form-group">
                            <input class="form-control mb-3" type="text" placeholder="Correo" asp-for="Correo" />
                        </div>
                        <!-- Campo de entrada de contraseña -->
                        <div class="form-group">
                            <input class="form-control mb-3" type="password" placeholder="Clave" asp-for="Clave" />
                        </div>
                        <!-- Selector de roles -->
                        <div class="form-group">
                            <label class="custom-label" for="Rol">Rol:</label>
                            <select id="Rol" name="Rol" class="form-control custom-select">
                                <option value="Administrador">Administrador</option>
                                <option value="Vendedor">Vendedor</option>
                            </select>
                        </div>
                        <!-- Mensaje de error -->
                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }
                        <br />
                        <!-- Botón de inicio de sesión -->
                        <center>
                            <div class="form-group">
                                <button class="btn btn-primary btn-block" type=" submit">Iniciar sesión</button>
                            </div>
                        </center>

                    </form>

                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>